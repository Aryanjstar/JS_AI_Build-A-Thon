{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Start MCP Tool Server",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "dev:sse"
      ],
      "cwd": "${workspaceFolder}/packages/node-os-mcp",
      "console": "integratedTerminal",
      "serverReadyAction": {
        "action": "startDebugging",
        "name": "Attach to Local MCP"
      }
    },
    {
      "name": "Attach to Local MCP",
      "type": "node",
      "request": "attach",
      "port": 9239,
      "restart": true
    }
  ]
}